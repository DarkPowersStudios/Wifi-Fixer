<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

		<PreferenceCategory android:title="Status Notification">
			<CheckBoxPreference android:key="StateNotif"
				android:defaultValue="true" android:title="Status Notification"
				android:summary="Displays an ongoing notification showing connection state" />
		</PreferenceCategory>

		<PreferenceCategory android:title="Repair Notification">
			<CheckBoxPreference android:key="Notifications"
				android:title="Repair Notifications"
				android:summary="Displays a notification when Wifi Fixer repairs a problem" />
		</PreferenceCategory>

</PreferenceScreen>
