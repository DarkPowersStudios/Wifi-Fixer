<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="@dimen/known_list_margin_left"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/known_list_padding_bottom"
    android:paddingLeft="@dimen/known_list_padding_left"
    android:paddingTop="@dimen/known_list_padding_top" >

    <TextView
        android:id="@+id/ssid"
        style="@style/Wftext.header"
        android:layout_width="@dimen/known_list_ssid_layout_width"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/known_list_ssid_margin"
        android:gravity="left"
        android:maxLength="13"
         >
    </TextView>

    <ImageView
        android:id="@+id/NETWORK_ICON"
        android:layout_width="@dimen/known_list_icon_width"
        android:layout_height="@dimen/known_list_icon_height"
        android:gravity="right"
        android:layout_gravity="center_vertical"
        android:src="@drawable/buttons" >
    </ImageView>

</LinearLayout>