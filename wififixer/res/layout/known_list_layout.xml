<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_height="fill_parent"
	android:layout_width="fill_parent" android:paddingBottom="5dp"
	android:paddingTop="5dp" android:paddingLeft="25dp">
	<TextView android:id="@+id/ssid" android:text="default"
		android:layout_gravity="top" android:layout_marginRight="15dp"
		android:layout_width="150dp" android:layout_height="44dp"
		android:layout_marginTop="10dp"
		android:gravity="left" android:textSize="15dp"
		android:shadowColor="#FFFF00"
		android:shadowDx="1"
		android:shadowDy="1"
		android:shadowRadius="3">
		</TextView>
		<ImageView android:id="@+id/NETWORK_ICON"
		android:layout_width="64dp" android:layout_height="44dp"
		android:gravity="right" android:maxWidth="64dp" android:maxHeight="44dp"
		android:src="@drawable/icon"></ImageView>
</LinearLayout>
