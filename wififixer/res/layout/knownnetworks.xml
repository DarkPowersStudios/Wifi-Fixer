<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/content"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:background="#F000">

	<TextView android:id="@+id/TextView01" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_centerHorizontal="true"
		android:text="Known Networks" android:paddingBottom="10px"
		android:textColor="#FFFF" android:textSize="20dp"></TextView>

	<ListView android:layout_centerHorizontal="true"
		android:layout_below="@+id/TextView01" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:id="@+id/ListView01"
		android:dividerHeight="1dip" android:divider="#545454"></ListView>
</RelativeLayout>
	