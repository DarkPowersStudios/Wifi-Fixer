<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minHeight="200dp"
    android:minWidth="400dp"
    android:alpha=".95"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/dialog"
    >

    <TextView
        android:id="@+id/ssid"
        style="@style/Wftext.large"
        android:layout_gravity="center"
        android:layout_weight="0.04"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="SSID" >
    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp"
        android:weightSum="1" >

        <LinearLayout
            android:id="@+id/LinearLayout00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:baselineAligned="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/aboutfragment_layout_padding_bottom"
            android:weightSum="1" >

            <TextView
                android:id="@+id/BSSID_title"
                style="@style/Wftext.header"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="MAC:" >
            </TextView>

            <TextView
                android:id="@+id/bssid"
                style="@style/Wftext"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="af:fa:df:df:df" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:baselineAligned="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/aboutfragment_layout_padding_bottom"
            android:weightSum="1" >

            <TextView
                android:id="@+id/TextView02"
                style="@style/Wftext.header"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Capabilities:" >
            </TextView>

            <TextView
                android:id="@+id/capabilities"
                style="@style/Wftext"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="OPEN" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
             android:paddingBottom="@dimen/aboutfragment_layout_padding_bottom"
            android:weightSum="1" >

            <TextView
                android:id="@+id/textView1"
                style="@style/Wftext.header"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Frequency:" />

            <TextView
                android:id="@+id/frequency"
                style="@style/Wftext"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="40" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1" >

            <TextView
                android:id="@+id/TextView03"
                style="@style/Wftext.header"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Signal:" >
            </TextView>

            <TextView
                android:id="@+id/level"
                style="@style/Wftext"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="-42" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>