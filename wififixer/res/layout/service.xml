<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="fill_parent" android:gravity="left">

	<TextView android:id="@+id/widget39" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/app_name"
		android:textSize="20dp" android:typeface="serif" android:textStyle="bold"
		android:layout_alignParentTop="true" android:layout_centerHorizontal="true">
	</TextView>
	<ImageView android:id="@+id/wficon" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_below="@+id/widget39"
		android:layout_centerHorizontal="true" android:src="@drawable/icon"
		android:paddingBottom="20dp">
	</ImageView>

	<TextView android:id="@+id/version" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@+id/TextView02"
		android:paddingTop="20dp" android:paddingLeft="20dp"
		android:paddingBottom="20dp" android:layout_toRightOf="@+id/wficon"
		android:layout_alignTop="@+id/wficon">
	</TextView>

	<TextView android:id="@+id/aboutText" android:layout_below="@+id/wficon"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:layout_marginLeft="50dp" android:layout_marginRight="50dp"
		android:text="@string/blurb" android:layout_centerVertical="true"
		android:layout_centerHorizontal="true" android:typeface="serif"
		android:textStyle="normal" android:textSize="15dp"
		android:paddingBottom="10dp">
	</TextView>

	<ImageButton android:paddingTop="10dp" android:onClick="serviceToggle"
		android:clickable="true" android:id="@+id/ImageButton01"
		android:layout_below="@+id/aboutText" android:paddingBottom="10dp"
		android:layout_height="40dp" android:layout_marginLeft="80dp"
		android:paddingRight="20dp" android:layout_width="40dp"></ImageButton>

	<TextView android:id="@+id/TextView01" android:paddingBottom="10dp"
		android:layout_below="@+id/ImageButton01" android:text="@string/service_status"
		android:layout_height="wrap_content" android:layout_width="80dp"
		android:layout_marginLeft="30dp" android:paddingRight="20dp"
		android:layout_alignLeft="@+id/aboutText"></TextView>

	<ImageButton android:paddingTop="10dp" android:onClick="wifiToggle"
		android:clickable="true" android:id="@+id/ImageButton02"
		android:layout_below="@+id/aboutText" android:layout_toRightOf="@+id/ImageButton01"
		android:paddingBottom="10dp" android:paddingLeft="20dp"
		android:layout_height="40dp" android:layout_width="40dp"
		android:layout_marginRight="10dp" android:layout_marginLeft="50dp"></ImageButton>

	<TextView android:id="@+id/TextView02" android:paddingBottom="10dp"
	android:layout_marginLeft="18dp" 
		android:layout_width="80dp" android:layout_below="@+id/ImageButton02"
		android:layout_toRightOf="@+id/TextView01" android:text="@string/wifi"
		android:layout_height="wrap_content"></TextView>

</RelativeLayout>
