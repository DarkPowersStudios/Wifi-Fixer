<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<PreferenceCategory android:title="Wifi Fixer Preferences">
	    
	    <PreferenceScreen android:title="@string/phone_ui_tutorial"
					>
					<intent android:targetPackage="org.wahtod.wififixer"
						android:targetClass="org.wahtod.wififixer.ui.WifiFixerActivity">
						<extra android:name="RUN_TUTORIAL" android:value="pi">
						</extra>
					</intent>

				</PreferenceScreen>

		<CheckBoxPreference android:key="Disable"
			android:summary="@string/Disable_summary" android:title="@string/Disable_title"/>



		<ListPreference android:defaultValue="1"
			android:key="Perf_Mode" android:entries="@array/entries"
			android:entryValues="@array/entryValues" android:title="@string/Perf_Mode_title" android:summary="@string/Perf_Mode_summary"/>

		<PreferenceScreen android:title="Notifications"
			android:summary="Network and status notifications">
			<PreferenceCategory android:title="Status Notification">
				<CheckBoxPreference android:key="StateNotif"
					android:defaultValue="true" android:summary="@string/StateNotif_summary" android:title="@string/StateNotif_title"/>
			</PreferenceCategory>

			<PreferenceCategory android:title="Repair Notifications">
				<CheckBoxPreference android:key="Notifications"
					android:summary="@string/Notifications_summary" android:title="@string/Notifications_title"/>
			</PreferenceCategory>
		</PreferenceScreen>
		<PreferenceScreen
            android:summary="Logging Preferences"
            android:title="Logging" >
            <PreferenceCategory android:title="Logging" >
                <CheckBoxPreference
                    android:key="SLOG"
                    android:summary="@string/SLOG_summary"
                    android:title="@string/SLOG_title" />
                <Preference
                    android:summary="Send Log to Developer"
                    android:title="Send Log" 
                    >
                    <intent
                        android:targetClass="org.wahtod.wififixer.ui.WifiFixerActivity"
                        android:targetPackage="org.wahtod.wififixer" >
                        <extra
                            android:name="SEND_LOG"
                            android:value="pi" >
                        </extra>
                    </intent>
                </Preference>
                <Preference
                    android:summary="Deletes Existing Log"
                    android:title="Delete Log" >
                    <intent
                        android:targetClass="org.wahtod.wififixer.ui.WifiFixerActivity"
                        android:targetPackage="org.wahtod.wififixer" >
                        <extra
                            android:name="DELETE_LOG"
                            android:value="pi" >
                        </extra>
                    </intent>
                </Preference>
            </PreferenceCategory>
        </PreferenceScreen>

		<ListPreference android:defaultValue="0"
			android:key="WIDGET" android:entries="@array/widget"
			android:entryValues="@array/widgetValues" android:title="@string/WIDGET_title" android:summary="@string/WIDGET_summary"/>

		<PreferenceScreen android:title="Advanced Options"
			android:summary="Please read documentation before changing these settings">
			<PreferenceCategory android:title="Wifi Usability">
				<CheckBoxPreference android:key="WiFiLock"
					android:defaultValue="true" android:summary="@string/WifiLock_summary" android:title="@string/WifiLock_title"/>
				<CheckBoxPreference android:key="SCREEN"
					android:defaultValue="true" android:summary="@string/SCREEN_summary" android:title="@string/SCREEN_title"/>
			</PreferenceCategory>
			<PreferenceCategory android:title="Specialized Fixes">
				<ListPreference android:defaultValue="3"
					android:key="SLEEP_POLICY" android:entries="@array/wfsleep"
					android:entryValues="@array/wfsleepValues" android:title="@string/SLEEP_POLICY_title" android:summary="@string/SLEEP_POLICY_summary"/>
				<CheckBoxPreference android:key="N1FIX2"
					android:summary="@string/N1FIX2_title" android:title="@string/N1FIX2_title"/>
			</PreferenceCategory>


		</PreferenceScreen>

	</PreferenceCategory>


</PreferenceScreen>
